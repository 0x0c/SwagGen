{
    "formatter": "Swift",
    "files":
    [
        {
            "template": "Podspec.stencil",
            "path": "{{ options.name }}.podspec"
        },
        {
            "template": "API.stencil",
            "path": "API.swift"
        },
        {
            "template": "APIRequest.stencil",
            "path": "APIRequest.swift"
        },
        {
            "template": "Decoding.stencil",
            "path": "Decoding.swift"
        },
        {
            "template": "Networking.stencil",
            "path": "Networking.swift"
        },
        {
            "template": "model.stencil",
            "context": "definitions",
            "path": "Models/{{ name }}.swift"
        },
        {
            "template": "request.stencil",
            "context": "operations",
            "path": "Requests{% if tag %}/{{ tag|upperCamelCase }}{% endif %}/{{ operationId|upperCamelCase }}.swift"
        }
    ],
    "options":
    {
        "name": "API",
    }
}
